{% assign main_menu_linklist = linklists[section.settings.footer_menu] %}

<div class="bg-blue-900 text-white pt-16 pb-5">
  <div class="container">
    <div class="grid md:grid-cols-2 gap-10 mb-10">
      <div class="text-center md:text-left">
        {% if section.settings.footer_logo != blank %}
          <img
            src="{{ section.settings.footer_logo | image_url }}"
            width="{{ section.settings.footer_logo.width }}"
            height="{{ section.settings.footer_logo.height }}"
            class="inline-block"
            alt="">
        {% else %}
          <a href="{{ shop.url }}" class="hdg-6">{{ shop.name }}</a>
        {% endif %}
      </div>

      <div class="text-center md:text-left">
        <h2 class="hdg-6 mb-5">{{ main_menu_linklist.title }}</h2>
        <ul class="">
          {% for link in main_menu_linklist.links %}
            <li class="mb-3 last:mb-0">
              <a href="{{ link.url }}" class="hover:underline text-xl">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>

    <div class="flex justify-between items-center flex-wrap gap-3">
      <div class="flex-initial md:flex-1 w-full text-center lg:text-left">
        <p class="text-sm">Â© {{ shop.name }} {{ 'now' | date: "%Y" }}. All rights reserved.</p>
      </div>

      <div class="flex-initial md:flex-1 w-full text-center lg:text-right">
        <p class="text-sm">Web Design & SEO by Lifted Logic</p>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "image_picker",
        "id": "footer_logo",
        "label": "Footer Logo (White)",
      },
      {
        "type": "link_list",
        "id": "footer_menu",
        "label": "Footer Menu",
        "default": "main-menu",
        "info": "Select the menu to display in the footer."
      }
    ]
  }
{% endschema %}