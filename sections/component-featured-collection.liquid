{% assign featured_collection = section.settings.featured_collection | default: collections["all"]  %}

<div class="py-12 bg-white">
  <div class="container">
    <div class="flex justify-between items-end gap-5 mb-8">
      <h2 class="hdg-3">{{ section.settings.title }}</h2>

      <a href="{{ featured_collection.url }}" class="btn">View All</a>
    </div>
    <div class="grid grid-cols-3 gap-8">
      {% for product in featured_collection.products limit: section.settings.products_per_page %}
        {% render 'product-card', _product: product %}
      {% else %}
        <p class="col-span-3 text-left">There are no products in this collection.</p>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Featured Collection",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Featured Collection"
      },
      {
        "type": "collection",
        "id": "featured_collection",
        "label": "Collection",
      },
      {
        "type": "range",
        "id": "products_per_page",
        "label": "Max Number of Products",
        "default": 3,
        "min": 1,
        "max": 12,
      }
    ],
    "presets": [
      {
        "name": "Featured Collection",
      }
    ]
  }
{% endschema %}