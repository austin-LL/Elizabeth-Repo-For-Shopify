<div class="bg-gray-100 border border-gray-400 relative flex-col group {{ classes }}">
  <div class="flex-initial overflow-hidden">
    <div class="image-wrapper group-hover:scale-110 duration-200 aspect-4/3 relative bg-white">
      {% render 'fit-image', image: _product.featured_image, placeholder: 'product-1' %}
    </div>
  </div>

  <div class="p-6 flex-1 flex flex-col items-start justify-between gap-y-5">
    <div class="flex-initial">
      {% if display_vendor != blank %}
        <p class="text-gray-500 mb-1 paragraph-small">{{ _product.vendor }}</p>
      {% endif %}

      <h2 class="paragraph-large font-semibold mb-1">{{ _product.title }}</h2>

      <p class="paragraph-default">{{ _product.price | money }}</p>
    </div>

    <a href="{{ _product.url }}" class="inline-flex items-center gap-x-2 hover:underline before:absolute before:inset-0 btn">
      View Product
    </a>
  </div>
</div>